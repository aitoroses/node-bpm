<ser:formUpdate>
    <ser:requestId>${requestId}</ser:requestId>
    <ser:form activityId="#default#">
    	<% _.each(categories, function(category) { %>
	    <for:categories name="${category.title}" label="${category.title}" >
	       <% _.each(category.fields, function(field) { %>
	       <for:field fieldId="${field.name}" fieldName="${field.name}">
	          <for:runtimeConfig>
	             <for:value>${field.value}</for:value>
	          </for:runtimeConfig>
	       </for:field>
	       <% }) %>
	    </for:categories>
	    <% }) %>
    </ser:form>
</ser:formUpdate>